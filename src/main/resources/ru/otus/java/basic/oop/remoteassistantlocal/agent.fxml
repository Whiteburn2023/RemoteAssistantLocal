<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.otus.java.basic.oop.remoteassistantlocal.agent.AgentController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #1e1e1e;"
      prefWidth="400" prefHeight="500">

    <!-- Заголовок -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Remote Assistant Agent"
               style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        <Label text="Агент удаленного доступа"
               style="-fx-text-fill: #aaa; -fx-font-size: 14;"/>
    </VBox>

    <!-- Информация о подключении -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2b2b2b; -fx-background-radius: 5;">
        <Label text="Информация о сервере"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Статус:" style="-fx-text-fill: #aaa; -fx-min-width: 80;"/>
            <Label fx:id="statusLabel" text="Остановлен"
                   style="-fx-text-fill: #ff9800; -fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="IP адрес:" style="-fx-text-fill: #aaa; -fx-min-width: 80;"/>
            <Label fx:id="ipLabel" text="192.168.1.100"
                   style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Порт:" style="-fx-text-fill: #aaa; -fx-min-width: 80;"/>
            <Label fx:id="portLabel" text="5555"
                   style="-fx-text-fill: #2196F3;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Клиентов:" style="-fx-text-fill: #aaa; -fx-min-width: 80;"/>
            <Label fx:id="clientsLabel" text="0"
                   style="-fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Управление -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2b2b2b; -fx-background-radius: 5;">
        <Label text="Управление"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button fx:id="startButton" text="Запустить сервер"
                onAction="#handleStartStop"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-height: 40;"/>

        <Button fx:id="settingsButton" text="Настройки"
                onAction="#handleSettings"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-min-height: 30;"/>
    </VBox>

    <!-- Настройки безопасности -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2b2b2b; -fx-background-radius: 5;">
        <Label text="Безопасность"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <CheckBox fx:id="requirePasswordCheck" text="Требовать пароль"
                  style="-fx-text-fill: #aaa;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Пароль:" style="-fx-text-fill: #aaa; -fx-min-width: 80;"/>
            <PasswordField fx:id="passwordField" prefWidth="150" promptText="пароль"/>
        </HBox>

        <CheckBox fx:id="notifyOnConnectCheck" text="Уведомлять о подключениях"
                  style="-fx-text-fill: #aaa;" selected="true"/>

        <CheckBox fx:id="requireConfirmationCheck" text="Требовать подтверждение действий"
                  style="-fx-text-fill: #aaa;" selected="true"/>
    </VBox>

    <!-- Логи -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Лог событий"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <TextArea fx:id="logTextArea" editable="false"
                  style="-fx-control-inner-background: #1a1a1a; -fx-text-fill: white; -fx-font-family: monospace;"
                  VBox.vgrow="ALWAYS"/>

        <HBox spacing="10">
            <Button text="Очистить логи" onAction="#clearLogs"
                    style="-fx-background-color: #757575; -fx-text-fill: white;"/>
            <Button text="Сохранить логи" onAction="#saveLogs"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Статус бар -->
    <HBox spacing="10">
        <Label fx:id="versionLabel" text="Версия 1.0"
               style="-fx-text-fill: #aaa; -fx-font-size: 11;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="memoryLabel" text="Память: 0/0 MB"
               style="-fx-text-fill: #aaa; -fx-font-size: 11;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="uptimeLabel" text="Время работы: 00:00:00"
               style="-fx-text-fill: #aaa; -fx-font-size: 11;"/>
    </HBox>

</VBox>